<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class= "alert">
    <h2><%= pluralize(@book.errors.count, "error") %>
      prohibited this product from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
<div class="field">
	<label for="book_title">Title</label>
	<%= f.text_field :title %>
</div>
	<div class="field">
	<label for="book_body">Body</label>
		<%= f.text_field :body %>
	</div>
<div class="actions">
	<%= f.submit 'Update Book' %>
</div>


<%= link_to "Show", book_path(@book) %>
	|
<%= link_to "Back", books_path %>
<% end %>
